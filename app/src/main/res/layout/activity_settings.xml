<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_title"
            android:textStyle="bold"
            android:textSize="22sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telegram API (לא Bot API)"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etApiId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="API_ID"
            android:inputType="number" />

        <EditText
            android:id="@+id/etApiHash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="API_HASH"
            android:inputType="text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/swLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logo_enable" />

        <Button
            android:id="@+id/btnPickLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pick_logo"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/preset_position"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>

        <Spinner
            android:id="@+id/spPreset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/advanced_position"
            android:layout_marginTop="16dp"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etX"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/x_percent"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/etY"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/y_percent"
                android:inputType="numberDecimal"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/etScale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/scale_percent"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/etOpacity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/opacity_percent"
                android:inputType="numberDecimal"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tvCurrentLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="8dp"
            android:textIsSelectable="true" />

    </LinearLayout>
</ScrollView>
