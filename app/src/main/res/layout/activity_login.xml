<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Telegram API (my.telegram.org)"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etApiId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="API ID (מספר)"
            android:inputType="number" />

        <EditText
            android:id="@+id/etApiHash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="API HASH"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnSaveApi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שמור API" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="טלפון (+972...)"
            android:inputType="phone" />

        <Button
            android:id="@+id/btnSendPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שלח טלפון (קבל קוד)" />

        <EditText
            android:id="@+id/etCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="קוד SMS"
            android:inputType="number" />

        <Button
            android:id="@+id/btnSendCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שלח קוד" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="סיסמת 2FA (אם יש)"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btnSendPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שלח סיסמה" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="סטטוס: מוכן"
            android:paddingTop="12dp" />

    </LinearLayout>
</ScrollView>
